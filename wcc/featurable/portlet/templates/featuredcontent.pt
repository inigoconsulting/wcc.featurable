<dl class="portlet portletFeaturedContent"
    i18n:domain="wcc.featurable"
    tal:define="item view/item;">
    <dd class="portletItem" style="padding:5px">
        <div tal:define="featureimage python:view.get_feature_image(item)">
            <h4 tal:condition="not:featureimage"
                    style="text-transform:uppercase"><a tal:attributes="href item/absolute_url" 
                    tal:content="item/Title"></a>
            </h4>

            <div class="featureImage" style="margin: 10px 0px;text-align:center">
                <img tal:replace="structure python:view.get_feature_image(item)"/>
            </div>
            <div>
                <p tal:content="item/Description"></p>
            </div>
        </div>
        <div class="visualClear"></div>
    </dd>
</dl>
