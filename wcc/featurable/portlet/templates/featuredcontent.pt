<dl class="portlet portletFeaturedContent"
    i18n:domain="wcc.featurable">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        Featured Content
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem">
        <div tal:repeat="item view/items">
            <h4><a tal:attributes="href item/getURL" 
                    tal:content="item/Title"></a>
            </h4>
            <div class="byline">
                <span i18n:translate="posted_on">Posted On</span>
                <span tal:replace="python:view.get_date(item)"></span>
            </div>
            <div class="featureImage" >
                <img tal:replace="structure python:view.get_feature_image(item)"/>
            </div>
            <div tal:content="item/Description">
            </div>
        </div>
    </dd>

    <dd class="portletFooter">
        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>
    </dd>

</dl>
