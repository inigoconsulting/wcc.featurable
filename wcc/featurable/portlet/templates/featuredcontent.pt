<dl class="portlet portletFeaturedContent"
    i18n:domain="wcc.featurable">

    <dd class="portletItem">
        <div tal:repeat="item view/items" style="float:left;width:200px">
            <h4 style="text-transform:uppercase"><a tal:attributes="href item/getURL" 
                    tal:content="item/Title"></a>
            </h4>
            <div class="byline" style="font-size:85%;color:#666">
                <span i18n:translate="posted_on">Posted On</span>
                <span tal:replace="python:view.get_date(item)"></span>
            </div>
            <div class="featureImage" style="margin: 10px 0px;">
                <img tal:replace="structure python:view.get_feature_image(item)"/>
            </div>
            <div>
                <p tal:content="item/Description"></p>
            </div>
        </div>
        <div class="visualClear"></div>
    </dd>

</dl>
